{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["cypress", "node", "cypress-axe"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "cypress.config.ts",
    "cypress/**/*.ts",
    "cypress/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
