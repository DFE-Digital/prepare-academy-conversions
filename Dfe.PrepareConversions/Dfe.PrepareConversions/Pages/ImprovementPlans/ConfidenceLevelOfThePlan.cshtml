@page "/improvement-plans/{id:int}/confidence-level-of-the-plan"
@using Dfe.PrepareConversions.Data.Models.SchoolImprovementPlans
@using Dfe.Academisation.ExtensionMethods
@model Dfe.PrepareConversions.Pages.ImprovementPlans.ConfidenceLevelOfThePlanModel
@{
    ViewData["Title"] = $"Confidence level in this improvement plan";
}

@section BeforeMain
{
    <partial name="_BackLink" model="@Model.BackLinkModel" />
    <partial name="_ErrorSummary" />
}

<span id="selection-span" class="govuk-caption-l">@Model.SchoolName</span>
<form method="post">
    <div class="govuk-form-group">
        <fieldset class="govuk-fieldset" aria-describedby="contact-hint">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <h1 class="govuk-fieldset__heading">
                    What is the confidence level in this improvement plan?
                </h1>
            </legend>
            <div class="govuk-radios @ModelState.GetErrorStyleClass()" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input asp-for="ConfidenceLevel" class="govuk-radios__input" id="High-radio" type="radio" value="@SchoolImprovementPlanConfidenceLevel.High" data-aria-controls="conditional-High">
                    <label class="govuk-label govuk-radios__label" for="High-radio">
                        High
                    </label>
                </div>
                
                <div class="govuk-radios__item">
                    <input asp-for="ConfidenceLevel" class="govuk-radios__input" id="Medium-radio" type="radio" value="@SchoolImprovementPlanConfidenceLevel.Medium" data-aria-controls="conditional-Medium">
                    <label class="govuk-label govuk-radios__label" for="Medium-radio">
                        Medium
                    </label>
                </div>

                <div class="govuk-radios__item">
                    <input asp-for="ConfidenceLevel" class="govuk-radios__input" id="Low-radio" type="radio" value="@SchoolImprovementPlanConfidenceLevel.Low" data-aria-controls="conditional-Low">
                    <label class="govuk-label govuk-radios__label" for="Low-radio">
                        Low
                    </label>
                </div>

                <div class="govuk-radios__item">
                    <input asp-for="ConfidenceLevel" class="govuk-radios__input" id="NoConfidence-radio" type="radio" value="@SchoolImprovementPlanConfidenceLevel.NoConfidence" data-aria-controls="conditional-NoConfidence">
                    <label class="govuk-label govuk-radios__label" for="NoConfidence">
                        No confidence
                    </label>
                </div>

            </div>
        </fieldset>
    </div>

    <button class="govuk-button" data-module="govuk-button" id="submit-btn">
        Continue
    </button>

</form>