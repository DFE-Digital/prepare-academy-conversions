@page "/task-list/{id:int}/confirm-school-overview/places-school-has-funding-for-number"
@using Dfe.PrepareConversions.TagHelpers
@model Dfe.PrepareConversions.Pages.UpdateAcademyConversionProjectPageModel
@{
   Layout = "_QuestionLayout";
   Model.SuccessPage = Links.SchoolOverviewSection.ConfirmSchoolOverview.Page;
   ViewData["Title"] = "Update the school's published admission number (PAN)";
   ViewData["SchoolName"] = Model.Project.SchoolName;
   ViewData["ProjectId"] = Model.Project.Id;
   ViewData["AcademyTypeAndRoute"] = Model.Project.AcademyTypeAndRoute;
}

@section BeforeMain
{
   <govuk-back-link link-item="@Links.SchoolOverviewSection.ConfirmSchoolOverview"/>
}

<govuk-text-input heading-label="true" label="How many places does the school have funding for?" name="places-school-has-funding-for-number" asp-for="Project.NumberOfPlacesSchoolHasFundingFor" width="5" hint="For example, 100"/>