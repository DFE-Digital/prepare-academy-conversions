@using Dfe.PrepareConversions.TagHelpers
@model ProjectTypeBase
@{
    var id = ViewContext.RouteData.Values["id"];
}
<nav class="moj-sub-navigation" aria-label="Sub navigation">
    <ul class="moj-sub-navigation__list govuk-!-margin-top-6">
        <li class="moj-sub-navigation__item">
            <sub-menu-link class="moj-sub-navigation__link"
                           asp-page="@Links.TaskList.Index.Page"
                           asp-route-id="@id">
                Project details
            </sub-menu-link>
        </li>

        <li if="@Model.IsVoluntary && !Model.IsExternalSchoolApplication && !Model.IsFormAMat" class="moj-sub-navigation__item">
            <sub-menu-link class="moj-sub-navigation__link"
                           asp-page="@Links.ApplicationForm.Index.Page"
                           asp-route-id="@id">
                School application form
            </sub-menu-link>
        </li>

        <li if="@Model.IsVoluntary && Model.IsExternalSchoolApplication" class="moj-sub-navigation__item">
            <sub-menu-link class="moj-sub-navigation__link"
                           asp-page="@Links.ExternalApplicationForm.Index.Page"
                           asp-route-id="@id">
                School application form
            </sub-menu-link>
        </li>

        <li if="@Model.IsFormAMat && !Model.IsExternalSchoolApplication" class="moj-sub-navigation__item">
            <sub-menu-link class="moj-sub-navigation__link"
                           asp-page="@Links.FormAMat.Index.Page"
                           asp-route-id="@id">
                School application form
            </sub-menu-link>
        </li>
        <li if="@Links.IsApplicationDocumentsEnabled && !Model.IsExternalSchoolApplication" class="moj-sub-navigation__item">
            <sub-menu-link class="moj-sub-navigation__link"
                           asp-page="@Links.ApplicationDocuments.Index.Page"
                           asp-route-id="@id">
                Application documents
            </sub-menu-link>
        </li>
        <li if="@Model.IsSponsored" class="moj-sub-navigation__item">
            <sub-menu-link class="moj-sub-navigation__link"
                           asp-page="@Links.AnnexB.Index.Page"
                           asp-route-id="@id">
                Annex B form
            </sub-menu-link>
        </li>

        <li class="moj-sub-navigation__item" data-cy="record_decision_menu">
            <sub-menu-link class="moj-sub-navigation__link"
                           asp-page="@Links.Decision.SubMenuRecordADecision.Page"
                           asp-route-id="@id">
                Decision
            </sub-menu-link>
        </li>

        <li class="moj-sub-navigation__item">
            <sub-menu-link class="moj-sub-navigation__link"
                           asp-page="@Links.ProjectNotes.Index.Page"
                           asp-route-id="@id">
                Project notes
            </sub-menu-link>
        </li>
        <li if="@Model.IsSponsored" class="moj-sub-navigation__item">
            <sub-menu-link class="moj-sub-navigation__link"
                           asp-page="@Links.SchoolImprovementPlans.Index.Page"
                           asp-route-id="@id">
                School improvement plans
            </sub-menu-link>
        </li>

        <li class="moj-sub-navigation__item">
            <sub-menu-link class="moj-sub-navigation__link"
                           asp-page="@Links.ProjectDates.ConversionDateHistory.Page"
                           asp-route-id="@id">
                Conversion date history
            </sub-menu-link>
        </li>

    </ul>
