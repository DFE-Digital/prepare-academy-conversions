@using Dfe.PrepareConversions.TagHelpers
@model SchoolOverviewViewModel
@{
   var kw = WidthOverride.TwoThirds;
   var distance = "";

   if (!string.IsNullOrEmpty(Model.DistanceFromSchoolToTrustHeadquarters))
   {
      distance = $"{Model.DistanceFromSchoolToTrustHeadquarters} miles";
   }
}

<dl class="govuk-summary-list">
   <govuk-summary-list-row name="school-type" label="School type" key-width="@kw" asp-for="SchoolType"/>
   <govuk-summary-list-row name="school-phase" label="School phase" key-width="@kw" asp-for="SchoolPhase"/>
   <govuk-summary-list-row name="age-range" label="Age range" key-width="@kw" asp-for="AgeRange"/>
   <govuk-summary-list-row name="capacity" label="Capacity" key-width="@kw" asp-for="SchoolCapacity"/>
   <govuk-summary-list-row name="published-admission-number" label="Published admission number (PAN)" key-width="@kw" asp-for="PublishedAdmissionNumber" asp-page="@Links.SchoolOverviewSection.PublishedAdmissionNumber.Page" asp-route-id="@Model.Id" hidden-text="published admission numbers"/>
   <govuk-summary-list-row name="number-on-roll" label="Number on roll (NOR)" key-width="@kw" asp-for="NumberOnRoll"/>
   <govuk-summary-list-row name="percentage-school-full" label="Percentage the school is full" key-width="@kw" asp-for="PercentageSchoolFull"/>
   <govuk-summary-list-row name="percentage-free-school-meals" label="Percentage of free school meals at the school (%FSM)" key-width="@kw" asp-for="PercentageFreeSchoolMeals"/>
   <govuk-summary-list-row name="viability-issues" label="Viability issues" key-width="@kw" asp-for="ViabilityIssues" asp-page="@Links.SchoolOverviewSection.ViabilityIssues.Page" asp-route-id="@Model.Id" hidden-text="viability issues"/>
   <govuk-summary-list-row name="financial-deficit" label="Financial deficit" key-width="@kw" asp-for="FinancialDeficit" asp-page="@Links.SchoolOverviewSection.FinancialDeficit.Page" asp-route-id="@Model.Id" hidden-text="financial deficit"/>
   <govuk-summary-list-row name="part-of-pfi" label="Part of a private finance initiative (PFI) scheme" key-width="@kw" asp-for="PartOfPfiScheme" asp-page="@Links.SchoolOverviewSection.PartOfPfiScheme.Page" asp-route-id="@Model.Id" />
   <govuk-summary-list-row if="@Model.PartOfPfiScheme?.Equals("Yes") ?? false" name="pfi-scheme-details" label="Private finance initiative (PFI) scheme" key-width="@kw" asp-for="PfiSchemeDetails" asp-page="@Links.SchoolOverviewSection.PartOfPfiScheme.Page" asp-route-id="@Model.Id" />
   <govuk-summary-list-row name="diocesan-multi-academy-trust" label="Is the school linked to a diocese?" key-width="@kw" asp-for="IsSchoolLinkedToADiocese"/>
   <govuk-summary-list-row name="distance-to-trust-headquarters" label="Distance from the converting school to the trust or other schools in the trust" key-width="@kw" value="@distance" additional-text="@Model.DistanceFromSchoolToTrustHeadquartersAdditionalInformation" asp-page="@Links.SchoolOverviewSection.DistanceFromTrustHeadquarters.Page" asp-route-id="@Model.Id" hidden-text="distance to trust headquarters"/>
   <govuk-summary-list-row name="parliamentary-constituency" label="Parliamentary constituency" key-width="@kw" asp-for="ParliamentaryConstituency"/>
   <govuk-summary-list-row name="member-of-parliament-name" label="MP name" asp-for="MemberOfParliamentName" key-width="@kw" asp-page="@Links.SchoolOverviewSection.MPDetails.Page" asp-route-id="@Model.Id" hidden-text="MP name"/>
   <govuk-summary-list-row name="member-of-parliament-party" label="MP political party" asp-for="MemberOfParliamentParty" key-width="@kw" asp-page="@Links.SchoolOverviewSection.MPDetails.Page" asp-route-id="@Model.Id" hidden-text="MP political party"/>
</dl>