@page "/transfers/project/{urn}/transfer-dates/previous-advisory-board-date"
@using Dfe.PrepareTransfers.Web.ExtensionMethods;
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Dfe.PrepareTransfers.Web.Dfe.PrepareTransfers.Helpers.TagHelpers
@using Dfe.Academisation.ExtensionMethods
@model Dfe.PrepareTransfers.Web.Pages.Projects.TransferDates.PreviousAdvisoryBoard

@{
   Layout = "_Layout";
    ViewBag.Title = ViewData.ModelState.BuildPageTitle("Previously considered date");
   var formClasses = ViewData.ModelState.GetFormGroupErrorStyle();
    var dayInputError = ViewData.ModelState.GetFormFieldErrorStyle("PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date", "PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date.Day");
    var monthInputError = ViewData.ModelState.GetFormFieldErrorStyle("PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date", "PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date.Month");
    var yearInputError = ViewData.ModelState.GetFormFieldErrorStyle("PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date", "PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date.Year");
}

@section BeforeMain
{
    <backtopreview urn="@Model.Urn" return-to-preview="@Model.ReturnToPreview">
        <a class="govuk-back-link" asp-page="/Projects/TransferDates/Index" asp-route-urn="@Model.Urn">Back</a>
    </backtopreview>
}

<div asp-gds-validation-summary></div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post" novalidate="">
            <input type="hidden" asp-for="@Model.Urn"/>
            <input type="hidden" asp-for="@Model.ReturnToPreview"/>
            <input type="hidden" asp-for="@Model.IncomingTrustName"/>
            <div class="govuk-form-group @formClasses">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l" aria-describedby="set-ab-date-hint">
                        <h1 class="govuk-fieldset__heading govuk-heading-xl" id="AdvisoryBoardViewModel_AdvisoryBoardDate_Date">
                            <span class="govuk-caption-l">
                                @Model.IncomingTrustName?.ToTitleCase()
                            </span>
                            Previously considered on
                        </h1>
                    </legend>
                    <div id="set-ab-date-hint" class="govuk-hint">
                        For example, 12 11 2021. You can change this date later.
                    </div>

                    <p asp-gds-validation-for="PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date"></p>
                    <p asp-gds-validation-for="PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date.Day"></p>
                    <p asp-gds-validation-for="PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date.Month"></p>
                    <p asp-gds-validation-for="PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date.Year"></p>

                   <div class="govuk-date-input" id="ab-date">
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label asp-for="PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date.Day" class="govuk-label govuk-date-input__label">
                                    Day
                                </label>
                                <input asp-for="PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date.Day" class="govuk-input govuk-date-input__input govuk-input--width-2 @dayInputError" type="text" pattern="[0-9]*" inputmode="numeric" data-test="day">
                            </div>
                        </div>
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label asp-for="PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date.Month" class="govuk-label govuk-date-input__label">
                                    Month
                                </label>
                                <input asp-for="PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date.Month" class="govuk-input govuk-date-input__input govuk-input--width-2 @monthInputError" type="text" pattern="[0-9]*" inputmode="numeric" data-test="month">
                            </div>
                        </div>
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label asp-for="PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date.Year" class="govuk-label govuk-date-input__label">
                                    Year
                                </label>
                                <input asp-for="PreviouslyConsideredViewModel.PreviouslyConsideredDate.Date.Year" class="govuk-input govuk-date-input__input govuk-input--width-4 @yearInputError" type="text" pattern="[0-9]*" inputmode="numeric" data-test="year">
                            </div>
                        </div>
                    </div>

                    <div class="govuk-body govuk-!-margin-top-4">or</div>

                    <div class="govuk-checkboxes govuk-!-margin-top-4" data-module="govuk-checkboxes">
                        <div class="govuk-checkboxes__item">
                            <input asp-for="PreviouslyConsideredViewModel.PreviouslyConsideredDate.UnknownDate" class="govuk-checkboxes__input" type="checkbox">
                            <label asp-for="PreviouslyConsideredViewModel.PreviouslyConsideredDate.UnknownDate" class="govuk-label govuk-checkboxes__label">
                                I do not know this
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <button class="govuk-button" data-module="govuk-button" type="submit">
                Save and continue
            </button>
        </form>
    </div>
</div>