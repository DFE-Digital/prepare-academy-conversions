@page "/project/{urn}/key-stage-4-performance/{academyUkprn}"
@using Dfe.PrepareTransfers.Web.Dfe.PrepareTransfers.Helpers.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Dfe.PrepareTransfers.Web.Pages.TaskList.KeyStage4Performance.KeyStage4Performance
@{
    ViewBag.Title = "Key stage 4 performance tables";
    Layout = "_Layout";
}

@section BeforeMain
{
    <backtopreview urn="@Model.Urn" return-to-preview="@Model.ReturnToPreview">
        <a class="govuk-back-link" data-cy="key-stage-4-back-btn" asp-page="/TaskList/SchoolData" asp-route-urn="@Model.Urn" asp-route-academyUkprn="@Model.AcademyUkprn">Back</a>
    </backtopreview>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">
           Academy: @Model.AcademyName
        </span>
        <h1 class="govuk-heading-l">
            Key stage 4 performance tables
        </h1>
        <p class="govuk-body" data-cy=".govuk-grid-column-two-thirds > :nth-child(3)">
            This information comes from Find and compare schools in England. It is for reference only. It will not appear in the project document.
        </p>
        <p class="govuk-body" data-cy=":nth-child(4) > .govuk-link">
			<a href="https://www.compare-school-performance.service.gov.uk/school/@Model.OutgoingAcademyUrn" class="govuk-link" rel="noreferrer noopener" target="_blank">Source of data: Find and compare school performance (opens in new tab)</a>
		</p>
		<div class="govuk-inset-text">
			There is no 2019 to 2020 key stage data because of the pandemic. 2020 to 2021 data is limited.
		</div>
        <hr class="govuk-section-break govuk-section-break--l">
    </div>
</div>

<partial name="TaskList/KeyStage4Performance/KeyStage4PerformanceTables" model="@Model.EducationPerformance"/>