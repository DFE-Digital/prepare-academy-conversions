@using ApplyToBecomeInternal.Models.ApplicationForm
@model FormField

@functions {
			public string GenerateId(string heading)
			{
				return heading.Replace(" ", "_");
			}
		}

<div class="govuk-summary-list__row" id="@Model.Id">
	<dt class="govuk-summary-list__key">
		@Model.Title
	</dt>
	<dd class="govuk-summary-list__value">
		@switch (Model)
		{
			case LinkFormField link:
				<a class="govuk-link" href="@link.Url">@link.Content</a>
				break;
			default:
				<text>@Model.Content</text>
				break;
		}
	</dd>
</div>