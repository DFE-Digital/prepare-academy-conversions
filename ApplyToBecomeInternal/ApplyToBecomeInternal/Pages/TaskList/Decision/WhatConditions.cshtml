@page "/task-list/{id:int}/decision/what-conditions"
@model ApplyToBecomeInternal.Pages.TaskList.Decision.WhatConditionsModel
@{
    ViewData["Title"] = "What conditions were set?";
}
@section BeforeMain
{   
    <partial name="_BackLink" model="@Model.BackLinkModel"/>
}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <span id="selection-span" class="govuk-caption-l">@Model.SchoolName</span>
            <h1 class="govuk-heading-l">What conditions were set?</h1>

            <form method="post">
                <div class="govuk-form-group">
                    <textarea class="govuk-textarea" title="condition-details" id="conditions-textarea" asp-for="@Model.ApprovedConditionsDetails" rows="10"></textarea>
                    <button class="govuk-button" data-module="govuk-button" id="submit-btn">
                        Continue
                    </button>
                </div>
            </form>
        </div>
    </div>