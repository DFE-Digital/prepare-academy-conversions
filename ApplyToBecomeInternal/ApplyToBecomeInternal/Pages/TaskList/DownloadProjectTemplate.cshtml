@page "/task-list/{id:int}/download-project-template/{handler?}"
@inject Microsoft.Extensions.Configuration.IConfiguration _configuration
@model ApplyToBecomeInternal.Pages.TaskList.DownloadProjectTemplate
@{
	ViewData["Title"] = "Download project template";
}

@section BeforeMain
{
	<govuk-back-link link-item="@Links.TaskList.PreviewHTBTemplate" />
}

<div class="govuk-grid-row">
	<div class="govuk-grid-column-full">
		<span class="govuk-caption-xl">@Model.Project.SchoolName</span>
		<h1 class="govuk-heading-xl">Download project template</h1>

      <section class="app-c-attachment">
         <div class="app-c-attachment__thumbnail">
            <a class="govuk-link" target="_self" tabindex="-1" aria-hidden="true" asp-route-id="@Model.Project.Id" asp-page-handler="htbtemplate">
               <svg class="app-c-attachment__thumbnail-image" version="1.1" viewBox="0 0 99 140" width="99" height="140" aria-hidden="true">
                  <path d="M12 12h75v27H12zM12 59h9v9h-9zM12 77h9v9h-9zM12 95h9v9h-9zM12 113h9v9h-9zM30 59h57v9H30zM30 77h39v9H30zM30 95h57v9H30zM30 113h48v9H30z" stroke-width="0"></path>
               </svg>
            </a>
         </div>
         <div class="app-c-attachment__details">
            <h2 class="app-c-attachment__title">
               <a class="govuk-link app-c-attachment__link" target="_self" asp-route-id="@Model.Project.Id" asp-page-handler="htbtemplate">
                  @Model.Project.SchoolName's project template
               </a>
            </h2>
            <p class="app-c-attachment__metadata">
               <span class="app-c-attachment__attribute">
                  Microsoft Word Document
               </span>
            </p>
         </div>
      </section>
      
      <div class="govuk-!-margin-top-6">
         <h2 class="govuk-heading-m">What happens next</h2>
         <p class="govuk-body">Get the downloaded template ready for advisory board.</p>
         <p class="govuk-body">Save the template in the school's SharePoint folder.</p>
         <p class="govuk-body">
            <a href="@_configuration["TemplateFeedback"]" class="govuk-link" target="_blank" rel="noopener">What did you think of this service? (opens in new tab)</a>. This takes 2 minutes.
         </p>
      </div>
   </div>
</div>
