@page "/task-list/{id:int}/confirm-general-information/distance-to-trust-headquarters"
@model ApplyToBecomeInternal.Pages.UpdateAcademyConversionProjectPageModel
@{
	Layout = "_QuestionLayout";
	Model.SuccessPage = Links.GeneralInformationSection.ConfirmGeneralInformation.Page;
	ViewData["Title"] = "Distance to trust headquarters";
}

@section BeforeMain
{
	<govuk-back-link link-item="@Links.GeneralInformationSection.ConfirmGeneralInformation" />
}

<div class="govuk-form-group">
	<h1 class="govuk-label-wrapper">
		<label class="govuk-label govuk-label--l" for="distance-to-trust-headquarters">
			What is the distance from the school to the trust headquarters?
		</label>
	</h1>
	<div id="distance-to-trust-headquarters-hint" class="govuk-hint">
		For example, 20
	</div>
	<govuk-decimal-input id="distance-to-trust-headquarters" name="distance-to-trust-headquarters" asp-for="@Model.Project.DistanceFromSchoolToTrustHeadquarters"/>
</div>
<govuk-textarea-input name="distance-to-trust-headquarters-additional-information"
					  asp-for="Project.DistanceFromSchoolToTrustHeadquartersAdditionalInformation"
					  rows="5"
					  label="Add any additional information if you need to"
					  hint="This information will go into your project template under the distance to the trust headquarters section." />
