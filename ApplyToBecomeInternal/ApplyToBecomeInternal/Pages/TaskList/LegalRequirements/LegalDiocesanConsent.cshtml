@section BeforeMain
{   
	@* <partial name="_BackLink" model="@Model.BackLinkModel"/> *@
	<partial name="_ErrorSummary" />
}

<div class="govuk-grid-row">
   <div class="govuk-grid-column-two-thirds">
      <form action="legal-summary1" method="post">
         <input hidden="" type="text" name="returnToSummary" value="no">
         <span class="govuk-caption-l">St. Wilfrid's Primary School</span>
         <h1 class="govuk-heading-l">Have the diocese given consent for this conversion?</h1>

         <div class="govuk-form-group">
            <div class="govuk-radios">
               <div class="govuk-radios__item">
                  <input class="govuk-radios__input" id="legal-diocesan-consent-checked"
                     name="legal-diocesan-consent-checked" type="radio" value="Yes">
                  <label class="govuk-label govuk-radios__label" for="legal-diocesan-consent-checked">
                     Yes
                  </label>
               </div>

               <div class="govuk-radios__item">
                  <input class="govuk-radios__input" id="legal-diocesan-consent-checked-2"
                     name="legal-diocesan-consent-checked" type="radio" value="No">
                  <label class="govuk-label govuk-radios__label" for="legal-diocesan-consent-checked-2">
                     No
                  </label>
               </div>

               <div class="govuk-radios__item">
                  <input class="govuk-radios__input" id="legal-diocesan-consent-checked-3"
                     name="legal-diocesan-consent-checked" type="radio" value="Not applicable">
                  <label class="govuk-label govuk-radios__label" for="legal-diocesan-consent-checked-3">
                     Not applicable
                  </label>
               </div>
            </div>
         </div>

         <button class="govuk-button" data-module="govuk-button">
            Save and continue
         </button>
      </form>
   </div>

   <!-- right hand nav -->
   <div class="govuk-grid-column-one-third">
      <aside class="app-related-items" role="complementary">
         <h2 class="govuk-heading-s" id="subsection-title">
            Useful information
         </h2>
         <nav role="navigation" aria-labelledby="subsection-title">
            <ul class="govuk-list govuk-!-font-size-16">
               <li>
                  <a class="govuk-link" href="#">

                  </a>
               </li>
               <li>
                  <p class="govuk-body-s"><a href="../related/application_newtab" target="application">School
                        application form (opens in a new tab)</a></p>
               </li>
            </ul>
         </nav>
      </aside>
   </div>
</div>