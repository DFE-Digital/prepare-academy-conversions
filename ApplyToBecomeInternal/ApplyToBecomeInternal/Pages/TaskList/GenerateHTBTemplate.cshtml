@page "/task-list/{id:int}/generate-headteacher-board-template/{handler?}"
@model ApplyToBecomeInternal.Pages.TaskList.GenerateHTBTemplateModel
@{
	ViewData["Title"] = "Generate headteacher board documents";
}

@section BeforeMain
{
	<govuk-back-link link-item="@Links.TaskList.PreviewHTBTemplate" />
}

<div class="govuk-grid-row">
	<div class="govuk-grid-column-full">
		<span class="govuk-caption-xl">@Model.Project.SchoolName</span>
		<h1 class="govuk-heading-xl">Generate headteacher board (HTB) documents</h1>
		<div class="govuk-inset-text">
			<p>Save these documents in the school's Sharepoint file.</p>
		</div>
		<section class="app-c-attachment">
			<div class="app-c-attachment__thumbnail">
				<a class="govuk-link" target="_self" tabindex="-1" aria-hidden="true" asp-route-id="@Model.Project.Id" asp-page-handler="htbtemplate">
					<svg class="app-c-attachment__thumbnail-image" version="1.1" viewBox="0 0 99 140" width="99" height="140" aria-hidden="true">
						<path d="M12 12h75v27H12zM12 59h9v9h-9zM12 77h9v9h-9zM12 95h9v9h-9zM12 113h9v9h-9zM30 59h57v9H30zM30 77h39v9H30zM30 95h57v9H30zM30 113h48v9H30z" stroke-width="0"></path>
					</svg>
				</a>
			</div>
			<div class="app-c-attachment__details">
				<h2 class="app-c-attachment__title">
					<a class="govuk-link app-c-attachment__link" target="_self" asp-route-id="@Model.Project.Id" asp-page-handler="htbtemplate">
						@Model.Project.SchoolName's HTB Template
					</a>
				</h2>
				<p class="app-c-attachment__metadata">
					<span class="app-c-attachment__attribute">
						MS Word Document
					</span>,
					<span class="app-c-attachment__attribute">
						22 KB
					</span>
				</p>
			</div>
		</section>
		<hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
		<section class="app-c-attachment">
			<div class="app-c-attachment__thumbnail">
				<a class="govuk-link" target="_self" tabindex="-1" aria-hidden="true" href="#">
					<svg class="app-c-attachment__thumbnail-image" version="1.1" viewBox="0 0 99 140" width="99" height="140" aria-hidden="true">
						<path d="M12 12h75v27H12zM12 59h9v9h-9zM12 77h9v9h-9zM12 95h9v9h-9zM12 113h9v9h-9zM30 59h57v9H30zM30 77h39v9H30zM30 95h57v9H30zM30 113h48v9H30z" stroke-width="0"></path>
					</svg>
				</a>
			</div>
			<div class="app-c-attachment__details">
				<h2 class="app-c-attachment__title">
					<a class="govuk-link app-c-attachment__link" target="_self" href="#" aria-describedby="sponsor-template">
						Trust template
					</a>
				</h2>
				<p class="app-c-attachment__metadata">
					<span class="app-c-attachment__attribute">
						MS Word Document
					</span>,
					<span class="app-c-attachment__attribute">
						19.5 KB
					</span>
				</p>
			</div>
		</section>
	</div>
</div>
