@page "/project-notes/{id:int}/new-note"
@model ApplyToBecomeInternal.Pages.ProjectNotes.NewNoteModel
@{
	Model.SuccessPage = Links.ProjectNotes.Index.Page;
}

@section BeforeMain
{
	<govuk-back-link link-item="@Links.ProjectNotes.Index"/>
}

@if (Model.ShowError)
{
	<partial name="_ErrorSummary" />
}

<div class="govuk-grid-row">
	<div class="govuk-grid-column-two-thirds">
		<span class="govuk-caption-l">@Model.Project.SchoolName</span>
		<h1 class="govuk-heading-l">
			Project notes
		</h1>
		<form method="post">
			<div class="govuk-form-group">
				<label class="govuk-label govuk-label--m">
                	Subject
                </label>
				<textarea class="govuk-textarea" id="project-note-subject" name="project-note-subject" rows="1" aria-describedby="project-note-subject-info subject-hint"></textarea>
			</div>
			<div class="govuk-form-group">
				<label class="govuk-label govuk-label--m">
					Note
				</label>
				<textarea class="govuk-textarea" id="project-note-body" name="project-note-body" rows="5" aria-describedby="project-note-body-info"></textarea>
			</div>
			<button type="submit" role="button" draggable="false" class="govuk-button govuk-button" data-module="govuk-button">
				Save note
			</button>
		</form>
	</div>
</div>
