@page "/project-type"
@using ApplyToBecome.Data.Models

@model ApplyToBecomeInternal.Pages.ProjectType.IndexModel
@{
	ViewData["Title"] = "Project type - Prepare conversions and transfers";
}
@section BeforeMain
{
	<partial name="_ErrorSummary" />
}

<h1 class="govuk-heading-l">What do you want to do?</h1>

<form method="post">
	<div class="govuk-form-group">
		<fieldset class="govuk-fieldset">
			<legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
			</legend>
			<div class="govuk-radios @ModelState.GetErrorStyleClass()" data-module="govuk-radios" id="ProjectType">
				@foreach (var decisionOption in Enum.GetValues(typeof(ProjectTypes)))
				{
					var decisionOptionString = $"{decisionOption.ToString()!.ToLower()}";
					var id = $"{decisionOptionString}-radio";
					var label = $"Manage an academy {decisionOptionString}";

					<div class="govuk-radios__item">
						<input class="govuk-radios__input" type="radio" asp-for="@Model.ProjectType" 
						       title="@decisionOptionString" value="@decisionOption" id="@id" />
						<label class="govuk-label govuk-radios__label" for="@id" id="">
							@label
						</label>
					</div>
				}
			</div>
		</fieldset>
	</div>
	<button class="govuk-button" data-module="govuk-button" id="submit-btn">
		Continue
	</button>
</form>
